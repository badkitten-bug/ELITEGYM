---
interface Props {
  callToAction: string;
  callToAction2:string;
  buttonText: string;
//   companyName:string;
//    logoImage:string;
}
const { callToAction, buttonText, callToAction2 } = Astro.props;

const imageURL = "hero-fitness-image.jpg"
const bgStyle = {
  backgroundImage: `url('/images/${imageURL}')`,
};
---

<header class="bg-cover bg-no-repeat bg-gray-400 bg-blend-multiply" style={bgStyle}>
  <nav class="text-white uppercase pt-8 p-4 font-bold2">
    <ul>
      <!--<li>{companyName}</li>-->
      <img src="/images/EliteGymLogo.png" alt="Logo de Elite Gym" class="w-24 h-auto">
    </ul>
  </nav>
<div class="px-4 mx-auto max-w-screen-xl text-center py-36 text-white">
  <h1 class="font-extrabold text-7xl lg:text-9xl tracking-wide mb-4 uppercase italic">{callToAction}</h1>
  <h1 class="font-extrabold text-7xl lg:text-9xl tracking-wide mb-4 uppercase italic">{callToAction2}</h1>
  <a href="https://wa.me/+51936312498" target="_blank">
      <button class="yellowBG p-2 uppercase text-black font-bold">{buttonText}</button>
  </a>
</div>


</header>
